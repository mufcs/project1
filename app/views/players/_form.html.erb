<%= form_for @player do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :dob %>
    <%= f.text_field :dob, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :position%>
    <%= f.text_field :position, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :club_id %>
    <%= f.select :club_id, Club.pluck(:title, :id), :include_blank => true, :class => 'form-control' %>
  </div>

  <%= f.submit :class => 'btn btn-success btn-lg' %>
<% end %>
