<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <ul class="nav">
      <% if @current_user.present? %>
        <% if @current_user.admin? %>
          <li class="nav-item"><%= link_to 'Users', users_path, :class => 'nav-link active' %></li>
        <% end %>
        <li class="nav-item"><%= link_to 'Home', root_path, :class => 'nav-link active' %></li>
        <li class="nav-item"><%= link_to 'All clubs', clubs_path, :class => 'nav-link active' %></li>
        <li class="nav-item"><%= link_to 'New club', new_club_path, :class => 'nav-link active' %></li>
        <li class="nav-item"><%= link_to 'All players', players_path, :class => 'nav-link active' %></li>
        <li class="nav-item"><%= link_to 'New player', new_player_path, :class => 'nav-link active' %></li>
        <li class="nav-item"><%= link_to 'Log out', login_path, :method => 'delete', :class => 'nav-link active' %></li>
      <% else %>

        <li class="nav-item"><%= link_to 'Sign up', new_user_path, :class => 'nav-link active' %></li>

        <li class="nav-item"><%= link_to 'Login', login_path, :class => 'nav-link active' %></li>
      <% end %>
    </ul>

    <%= yield %>

  </body>
</html>
